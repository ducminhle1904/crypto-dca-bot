{
  "strategy": {
    "symbol": "HYPEUSDT",
    "data_file": "data\\bybit\\linear\\HYPEUSDT\\5\\candles.csv",
    "base_amount": 40,
    "max_multiplier": 1.8,
    "price_threshold": 0.01,
    "price_threshold_multiplier": 1.3,
    "interval": "5m",
    "window_size": 100,
    "tp_percent": 0.05,
    "use_tp_levels": true,
    "auto_tp_orders": true,
    "cycle": true,
    "indicators": ["supertrend", "mfi", "keltner", "wavetrend"],
    "supertrend": {
      "period": 12,
      "multiplier": 2.5
    },
    "mfi": {
      "period": 10,
      "oversold": 25,
      "overbought": 70
    },
    "keltner_channels": {
      "period": 50,
      "multiplier": 2
    },
    "wavetrend": {
      "n1": 15,
      "n2": 24,
      "overbought": 80,
      "oversold": -60
    }
  },
  "exchange": {
    "name": "bybit",
    "bybit": {
      "api_key": "${BYBIT_API_KEY}",
      "api_secret": "${BYBIT_API_SECRET}",
      "testnet": false,
      "demo": true
    }
  },
  "risk": {
    "initial_balance": 500,
    "commission": 0.0005,
    "min_order_qty": 0.01
  },
  "notifications": {
    "enabled": false,
    "telegram_token": "${TELEGRAM_TOKEN}",
    "telegram_chat": "${TELEGRAM_CHAT_ID}"
  }
}
