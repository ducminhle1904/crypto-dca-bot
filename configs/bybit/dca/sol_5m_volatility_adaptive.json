{
  "strategy": {
    "symbol": "SOLUSDT",
    "category": "linear",
    "data_file": "data\\bybit\\linear\\SOLUSDT\\5\\candles.csv",
    "base_amount": 40,
    "max_multiplier": 4,
    "price_threshold": 0.01,
    "price_threshold_multiplier": 1.15,
    "interval": "5m",
    "window_size": 100,
    "tp_percent": 0.06,
    "use_tp_levels": true,
    "auto_tp_orders": true,
    "cycle": true,
    "indicators": ["hull_ma", "mfi", "wavetrend", "keltner"],

    "dca_spacing": {
      "strategy": "volatility_adaptive",
      "parameters": {
        "base_threshold": 0.008,
        "volatility_sensitivity": 1.8,
        "atr_period": 14,
        "max_threshold": 0.04,
        "min_threshold": 0.003,
        "level_multiplier": 1.12
      }
    },

    "hull_ma": {
      "period": 25
    },
    "mfi": {
      "period": 22,
      "oversold": 30,
      "overbought": 85
    },
    "keltner_channels": {
      "period": 15,
      "multiplier": 2.2
    },
    "wavetrend": {
      "n1": 15,
      "n2": 24,
      "overbought": 70,
      "oversold": -80
    }
  },
  "exchange": {
    "name": "bybit",
    "bybit": {
      "api_key": "${BYBIT_API_KEY}",
      "api_secret": "${BYBIT_API_SECRET}",
      "testnet": false,
      "demo": true
    }
  },
  "risk": {
    "initial_balance": 500,
    "commission": 0.0005,
    "min_order_qty": 0.1
  },
  "notifications": {
    "enabled": false,
    "telegram_token": "${TELEGRAM_TOKEN}",
    "telegram_chat": "${TELEGRAM_CHAT_ID}"
  }
}
