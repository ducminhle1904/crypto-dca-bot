{
  "strategy": {
    "symbol": "BTCUSDT",
    "category": "linear",
    "base_amount": 100,
    "max_multiplier": 2.5,
    "dca_spacing": {
      "strategy": "fixed",
      "parameters": {
        "base_threshold": 0.02,
        "threshold_multiplier": 1.15,
        "max_threshold": 0.08,
        "min_threshold": 0.005
      }
    },
    "interval": "5m",
    "window_size": 100,
    "tp_percent": 0.025,
    "use_tp_levels": true,
    "auto_tp_orders": true,
    "tp_levels": 5,
    "tp_quantity": 0.2,
    "cancel_orphaned_orders": false,
    "cycle": true,
    "dynamic_tp": {
      "strategy": "indicator_based",
      "base_tp_percent": 0.025,
      "indicator_config": {
        "weights": {
          "rsi": 0.25,
          "mfi": 0.25,
          "hull_ma": 0.25,
          "wavetrend": 0.25
        },
        "strength_multiplier": 0.3,
        "min_tp_percent": 0.015,
        "max_tp_percent": 0.05
      }
    },
    "indicators": ["hull_ma", "mfi", "wavetrend", "rsi"],
    "rsi": {
      "period": 14,
      "oversold": 30,
      "overbought": 70
    },
    "hull_ma": {
      "period": 10
    },
    "mfi": {
      "period": 10,
      "oversold": 30,
      "overbought": 80
    },
    "wavetrend": {
      "n1": 8,
      "n2": 32,
      "overbought": 80,
      "oversold": -60
    }
  },
  "exchange": {
    "name": "bybit",
    "bybit": {
      "api_key": "${BYBIT_API_KEY}",
      "api_secret": "${BYBIT_API_SECRET}",
      "testnet": false,
      "demo": true
    }
  },
  "risk": {
    "initial_balance": 1000,
    "commission": 0.0005
  },
  "notifications": {
    "enabled": false,
    "telegram_token": "${TELEGRAM_TOKEN}",
    "telegram_chat": "${TELEGRAM_CHAT_ID}"
  }
}
