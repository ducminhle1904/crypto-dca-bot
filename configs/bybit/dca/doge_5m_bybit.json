      "period": 25
    },
    "mfi": {
      "period": 18,
      "oversold": 20,
      "overbought": 70
    },
    "keltner_channels": {
      "period": 15,
      "multiplier": 2
    },
    "wavetrend": {
      "n1": 10,
      "n2": 21,
      "overbought": 80,
      "oversold": -70
    }
  },
  "exchange": {
    "name": "bybit",
    "bybit": {
      "api_key": "${BYBIT_API_KEY}",
      "api_secret": "${BYBIT_API_SECRET}",
      "testnet": false,
      "demo": true
    }
  },
  "risk": {
    "initial_balance": 500,
    "commission": 0.0005,
    "min_order_qty": 1
