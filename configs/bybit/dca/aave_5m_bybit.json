{
  "strategy": {
    "symbol": "AAVEUSDT",
    "data_file": "data\\bybit\\linear\\AAVEUSDT\\5\\candles.csv",
    "base_amount": 40,
    "max_multiplier": 1.5,
    "price_threshold": 0.015,
    "price_threshold_multiplier": 1.3,
    "interval": "5m",
    "window_size": 100,
    "tp_percent": 0.055,
    "use_tp_levels": true,
