    "hull_ma": {
      "period": 10
    },
    "mfi": {
      "period": 22,
      "oversold": 30,
      "overbought": 80
    },
    "keltner_channels": {
      "period": 50,
      "multiplier": 1.8
    },
    "wavetrend": {
      "n1": 12,
      "n2": 28,
      "overbought": 70,
      "oversold": -70
    }
  },
  "exchange": {
    "name": "bybit",
    "bybit": {
      "api_key": "${BYBIT_API_KEY}",
      "api_secret": "${BYBIT_API_SECRET}",
      "testnet": false,
      "demo": true
    }
  },
  "risk": {
    "initial_balance": 500,
    "commission": 0.0005,
    "min_order_qty": 0.01
  },
  "notifications": {
    "enabled": false,
    "telegram_token": "${TELEGRAM_TOKEN}",
    "telegram_chat": "${TELEGRAM_CHAT_ID}"
  }
