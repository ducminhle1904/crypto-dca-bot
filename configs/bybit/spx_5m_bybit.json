{
  "strategy": {
    "symbol": "SPXUSDT",
    "base_amount": 40,
    "max_multiplier": 1.5,
    "price_threshold": 0.02,
    "interval": "5m",
    "window_size": 100,
    "tp_percent": 0.025,
    "cycle": true,
    "indicators": ["hull_ma", "mfi", "keltner", "wavetrend"],
    "use_advanced_combo": true,
    "hull_ma": {
      "period": 50
    },
    "mfi": {
      "period": 16,
      "oversold": 30,
      "overbought": 85
    },
    "keltner_channels": {
      "period": 50,
      "multiplier": 2.5
    },
    "wavetrend": {
      "n1": 18,
      "n2": 18,
      "overbought": 70,
      "oversold": -80
    }
  },
  "exchange": {
    "name": "bybit",
    "bybit": {
      "api_key": "${BYBIT_API_KEY}",
      "api_secret": "${BYBIT_API_SECRET}",
      "testnet": false,
      "demo": true
    }
  },
  "risk": {
    "initial_balance": 500,
    "commission": 0.0005,
    "min_order_qty": 1
  },
  "notifications": {
    "enabled": false,
    "telegram_token": "${TELEGRAM_TOKEN}",
    "telegram_chat": "${TELEGRAM_CHAT_ID}"
  }
}
